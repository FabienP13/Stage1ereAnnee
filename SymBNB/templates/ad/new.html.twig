{% extends 'base.html.twig'%}

{% block title %} Création d'une annonce {% endblock %}

{% form_theme form _self %}

{% block body %}

    <div class="container">
        <h1>Créer une nouvelle annonce</h1>

        {{ form_start(form)}} {# Affichage formulaire #}

        {{form_widget(form)}}

        {{ form_end(form) }}
    </div>

{% endblock %}

{# Personnaliser le sous-formulaire d'ajout d'images #}

{% block _ad_images_widget %}
    <p>Ici vous pouvez ajouter vos propres images</p>

    {{ form_widget(form) }} {# form ne représente pas le form dans son intégralité #}

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-success"> Ajouter une image</button>
    </div>
{% endblock %}

{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_images_entry_widget %}
    <div class="form-group">
        <div class="row">   
            <div class="col">
                {{ form_widget(form.url) }}
            </div>
            <div class="col">
                {{ form_widget(form.caption) }}

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{parent()}} 
    <script>
    $(document).ready(function() { // attach a handler to an event for the elements        
    
        $('#add-image').click(function(){
            
            //je récupère le numéro des futurs champs que je vais créer
            const index = $('#ad_images div.form-group').length;

            //je récupère le prototype des entrées
            const tmpl = $('#ad_images').data('prototype').replace(/__name__/g, index);

            //j'injecte ce code au sein de la div
            $('#ad_images').append(tmpl);
        });
    });
    </script>
{% endblock %}


